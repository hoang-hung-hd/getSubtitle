@model UploadFile
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <form method="post" asp-action="getVideoContent" asp-controller="Home" enctype="multipart/form-data">
        <label asp-for="video">Select a file:</label>
        <input type="file" asp-for="video"><br><br>
        <input type="submit">
    </form>
</div>
